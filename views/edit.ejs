<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Bootstrap demo</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
  </head>
  <body>
    <div class="container">

    <h1>OGX</h1>
    <p>Buat Iklan Mobil baru</p>

    <form action="/cars/edit/<%= data.id %>" method="post">
        <select class="form-select" aria-label="Default select example" name="CategoryId">
            <option value="" selected>Choose...</option>
            <% category.forEach(res => { %>
            <option value="<%= res.id %>"><%= res.type %></option>
          <% }) %>
        </select>
        <div class="mb-3">
          <label for="exampleInputEmail1" class="form-label">Nama Mobil</label>
          <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" name="name" value="<%= data.name %>">
        </div>
        <div class="mb-3">
          <label for="exampleInputEmail1" class="form-label">Tahun Pembuatan</label>
          <input type="number" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" name="carReleased" value="<%= data.carReleased %>">
        </div>
        <div class="mb-3">
          <label for="exampleInputEmail1" class="form-label">Harga</label>
          <input type="number" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" name="price" value="<%= data.price %>">
        </div>
        <div class="mb-3">
          <label for="exampleInputEmail1" class="form-label">Masukan Gambar</label>
          <input type="string" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" name="carImage" value="<%= data.carImage %>">
        </div>
       
        <button type="submit" class="btn btn-primary">Submit</button>
      </form>

    </div>
  </body>
</html>